<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
                        "http://tiles.apache.org/dtds/tiles-config 2 0.dtd">
<tiles-definitions>
    <definition name="mainLayout" template="/Layout.jsp">
        <put-attribute name="header"    value="/HeaderBanner.jsp"/>
        <put-attribute name="menu"      value="/Menu.jsp"/>
        <put-attribute name="footer"    value="/Footer.jsp"/>
        <put-attribute name="bodyTitle" value="Body Title"/>
    </definition>

    <definition name="tiles.login" extends="mainLayout">
        <put-attribute name="menu"        value="/Blank.jsp" />
        <put-attribute name="body"        value="/Login.jsp"/>
        <put-attribute name="bodyTitle"   value="SQS.logintitle"/>
    </definition>
</tiles-definitions>
