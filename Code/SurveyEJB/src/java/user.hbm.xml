<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="survey.dto.RoleDTO" table="ROLE">
        <id name="roleID" column="ROLE_ID" type="integer">
            <generator class="native" />
        </id>
        <property name="name" column="ROLE_NAME" unique="true" />
        <property name="description" column="DESCRIPTION" />
        <bag name="functions" order-by="order" table="ROLE_FUNCTION" cascade="all">
            <key column="ROLE_ID" />
            <many-to-many column="FUNCTION_ID" class="survey.dto.FunctionDTO" />
        </bag>
    </class>
    <class name="survey.dto.FunctionDTO" table="FUNCTION">
        <id name="functionID" column="FUNCTION_ID" type="integer">
            <generator class="native" />
        </id>
        <property name="code" column="FUNCTION_CODE" />
        <property name="name" column="FUNCTION_NAME" />
        <property name="description" column="DESCRIPTION" />
        <property name="order" column="ORDER" type="integer" />
    </class>
</hibernate-mapping>
